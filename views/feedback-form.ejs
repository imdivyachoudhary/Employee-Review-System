<link rel="stylesheet" href="/css/modal.css" />

<form action="" method="post" onsubmit="submitForm(this,event)">
  <div class="modal-header">
    <h1 class="modal-title fs-5" id="exampleModalLabel">Submit Feedback</h1>
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="modal"
      aria-label="Close"
    ></button>
  </div>
  <div class="modal-body">
    <div class="form-item">
      <label for="for_employee" class="form-label">For Employee</label>
      <input type="hidden" name="for_employee_id" value="for_employee_id" />
      <input
        type="text"
        class="form-control"
        id="for_employee_name"
        name="for_employee_name"
        value="Name"
        placeholder="For Employee Name"
        readonly
        required
      />
      <input
        type="email"
        class="form-control"
        id="for_employee_email"
        name="for_employee_email"
        value="abc@gmail.com"
        placeholder="abc@gmail.com"
        readonly
        required
      />
    </div>
    <div class="form-item">
      <label for="feedback" class="form-label">Your Feedback</label>
      <textarea
        placeholder="Your Feedback For the Employee"
        name="feedback"
        id="feedback"
        required
      ></textarea>
    </div>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
      Cancel
    </button>
    <button type="submit" class="btn btn-success">Submit</button>
  </div>
</form>
